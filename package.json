{
  "name": "alexis",
  "version": "0.1.0",
  "description": "alexis for now",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"./**/*.ts\"",
    "repl": "dotenv -e server/dev.env node",
    "server": "dotenv -e server/dev.env -- tsnd --respawn server/index.ts",
    "pdfProcessor": "dotenv -e server/dev.env -- tsnd --respawn server/pdf-processing/worker.ts",
    "redis": "docker-compose up",
    "start": "run-p redis server pdfProcessor",
    "lint": "eslint \"./**/*.ts\" --fix",
    "pretest": "docker-compose up -d redis",
    "test": "dotenv -e server/dev.env -- jest || true",
    "posttest": "docker-compose down",
    "pretest:watch": "npm run pretest",
    "test:watch": "dotenv -e server/dev.env -- jest --watch",
    "posttest:watch": "npm run posttest",
    "test:cov": "dotenv -e server/dev.env -- jest --coverage",
    "postinstall": "env-linter -s -d -l -vs 'node=12.x.x,npm=6.x.x'"
  },
  "dependencies": {
    "@types/connect-redis": "0.0.16",
    "bcrypt": "5.0.1",
    "connect-redis": "5.2.0",
    "env-var": "7.0.0",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "file-type": "16.3.0",
    "ioredis": "4.26.0",
    "multer": "1.4.2",
    "pdfjs-dist": "2.7.570",
    "pino": "6.11.3",
    "sentence-splitter": "3.2.1",
    "tokenizers": "0.7.0",
    "uuid": "8.3.2",
    "zod": "1.11.16"
  },
  "devDependencies": {
    "@namics/env-linter": "0.4.0",
    "@types/bcrypt": "3.0.1",
    "@types/express": "4.17.11",
    "@types/express-session": "1.17.3",
    "@types/ioredis": "4.22.3",
    "@types/jest": "26.0.22",
    "@types/multer": "1.4.5",
    "@types/node": "13.9.1",
    "@types/pino": "6.3.7",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "dotenv-cli": "4.0.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.2.2",
    "npm-run-all": "4.1.5",
    "pino-pretty": "4.7.1",
    "prettier": "1.19.1",
    "ts-jest": "26.5.5",
    "ts-loader": "6.2.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./**/*.ts",
      "!server/index.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "./*.{ts,js,json}": "prettier --write",
    "**/package.json": [
      "env-linter --saveExact --dependenciesExactVersion"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120,
    "trailingComma": "none"
  }
}