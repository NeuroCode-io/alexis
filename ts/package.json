{
  "name": "alexis-server",
  "version": "0.0.1",
  "description": "express server",
  "author": "Ziad Shaban",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node-dev --respawn -- src/server.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "postinstall": "env-linter -s -d -l -vs 'node=14.x.x,npm=6.x.x'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "multer": "1.4.2",
    "pino": "6.11.3"
  },
  "devDependencies": {
    "@namics/env-linter": "0.4.0",
    "@types/express": "4.17.11",
    "@types/jest": "25.1.4",
    "@types/multer": "1.4.5",
    "@types/node": "^13.9.1",
    "@types/pino": "6.3.7",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.2.2",
    "pino-pretty": "4.7.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.5.0",
    "ts-loader": "^6.2.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "./src/utils/",
      "./test/(utils|data)/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testMatch": [
      "**/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "./*.{ts,js,json}": "prettier --write",
    "**/package.json": [
      "env-linter --saveExact --dependenciesExactVersion"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120
  }
}